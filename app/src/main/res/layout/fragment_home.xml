<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="net.codeforgood.sciencebehindsports.Fragment.HomeFragment">


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/home_fragment_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Welcome "
        android:textSize="32sp"
        android:layout_marginBottom="16dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <VideoView
        android:id="@+id/home_fragment_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_fragment_welcome"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="You Come in Loving FootBall"
        android:textAlignment="textStart"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="You Leave Loving STEM"
        android:textAlignment="textEnd"/>

</LinearLayout>
