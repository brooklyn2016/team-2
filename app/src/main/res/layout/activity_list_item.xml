<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@android:color/holo_blue_light"
    android:padding="16dp">


    <TextView
        android:id="@+id/activity_list_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Activity 1"
        android:gravity="center"
        android:textSize="48sp"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/activity_list_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="20 Minute"
        android:gravity="center"
        android:textSize="32sp"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/activity_list_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="materials, materials, materials, materials, materials, materials, "
        android:gravity="center"
        android:textSize="24sp"/>


</LinearLayout>