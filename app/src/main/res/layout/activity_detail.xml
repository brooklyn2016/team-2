<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.codeforgood.sciencebehindsports.UI.ActivityDetailActivity">

<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/activity_detail_activity_num"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="32dp"/>
        <TextView
            android:id="@+id/activity_detail_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/activity_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/activity_detail_instruction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:textSize="16dp"
            android:layout_marginBottom="16dp"/>
        <VideoView
            android:layout_below="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/activity_detail_video"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/activity_detail_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:textSize="16dp"/>
        <Button
            android:layout_below="@+id/activity_detail_video"
            android:id="@+id/activity_detail_quiz"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:text="Start Quiz"
            android:textSize="20dp"
            />

    </LinearLayout>
</ScrollView>

</RelativeLayout>
